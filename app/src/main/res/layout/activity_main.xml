<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:GradientCircularProgressBar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171F29">

    <Button
        android:id="@+id/boldButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="B"/>

    <Button
        android:id="@+id/italicButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="I"
        android:layout_toEndOf="@id/boldButton"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/underlineButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="U"
        android:layout_toEndOf="@id/italicButton"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/strikeThroughButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Strike"
        android:layout_toEndOf="@id/underlineButton"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/superButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/strikeThroughButton"
        android:text="SUP" />

    <Button
        android:id="@+id/subScriptButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/superButton"
        android:text="SUB" />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="Image"
        android:layout_below="@id/boldButton"
        android:layout_marginStart="5dp"/>

    <EditText
        android:id="@+id/customEditText"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/imageButton"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="Text"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/newActivity"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="New Activity"
        android:layout_marginStart="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>